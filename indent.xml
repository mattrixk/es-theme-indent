<theme>

	<formatVersion>4</formatVersion>

	<view name="system, basic, detailed, grid, video">

		<image name="background" extra="true">
			<tile>true</tile>
			<color>7381a0ff</color>
			<path>./_inc/img/bg_pattern.jpg</path>
			<size>1 1</size>
			<pos>0 0</pos>
		</image>

		<image name="bg_shadow" extra="true">
			<color>000000ff</color>
			<path>./_inc/img/bg_shadow.png</path>
			<size>1 1</size>
			<pos>0 0</pos>
		</image>

		<image name="bg_content" extra="true">
			<size>1 1</size>
			<pos>0 0</pos>
		</image>

		<helpsystem name="help">
			<pos>0.020 0.945</pos>
			<textColor>AAAAAA</textColor>
			<iconColor>AAAAAA</iconColor>
			<fontPath>./_inc/font/Roboto-Light.ttf</fontPath>
			<fontSize>0.025</fontSize>
		</helpsystem>

	</view>
	
	<view name="system">

		<image name="console" extra="true">
			<color>FFFFFFFF</color>
			<maxSize>0.75 0.75</maxSize>
			<origin>0.5 0.5</origin>
			<pos>0.5 0.5</pos>
		</image>

		<!-- systemcarousel --><!-- 
			<image name="console" extra="true">
				<color>FFFFFFFF</color>
				<maxSize>0.980 0.670</maxSize>
				<origin>0.5 0.5</origin>
				<pos>0.5 0.355</pos>
			</image>

			<image name="bg_content" extra="true">
				<path>./_inc/img/bg_content-system.png</path>
			</image>

			<systemcarousel name="carousel">
				<ypos>0.677</ypos>
				<height>0.260</height>
				<color>FFFFFF00</color>

				<infobarcolor>FFFFFF00</infobarcolor>
				<infobarfontpath>./_inc/font/Roboto-Light.ttf</infobarfontpath>
				<infobarfontsize>0.025</infobarfontsize>
				<infobarfontcolor>AAAAAA</infobarfontcolor>

				<logosizex>0.250</logosizex>
